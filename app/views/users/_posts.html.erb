
<div class="container-fluid user_posts">
	<div class="row">
		<div class="col-md-12">
			<% if @user.posts.exists? %>
				<% @user.posts.order(created_at: :desc).each do |post| %>
				    <div class="post">
				    	<%= link_to post_path(post.id), data: {"turbolinks" => false} do %>
							<%= attachment_image_tag post, :post_image, format:"jpg", fallback:"no_image.jpg", class:"post-img" %>
						<% end %>
					</div>
				<% end %>
			<% else %>
			    <div class="col-md-offset-1">
			    	<h4>投稿はありません</h4>
			    </div>
			<% end %>
		</div>
	</div>
</div>