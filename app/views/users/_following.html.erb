
<div class="container-fluid following">
	<div class="row">
		<div class="col-md-offset-1 col-md-7">
			<% if @user.following.exists? %>
				<% @user.following.each do |following| %>
				    <%= link_to user_path(following.id) do%>
					    <div>
							<%= attachment_image_tag following, :profile_image, :fill, 80, 80, format:"jpg", fallback:"no_image.jpg", size:"80x80" %>
							<%= following.name %>
						</div>
					<% end %>
				<% end %>
			<% else %>
			    <h4>ユーザをフォローしていません</h4>
			<% end %>
		</div>
	</div>
</div>
