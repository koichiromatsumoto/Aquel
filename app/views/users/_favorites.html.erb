
<div class="container-fluid user_posts">
	<div class="row">
		<div class="col-md-12">
			<% if @user.favorites.exists? %>
				<% @user.favorites.each do |favorite| %>
				    <% post = Post.find_by(id: favorite.post_id) %>
				    <div class="post">
				    	<%= link_to post_path(post.id), data: {"turbolinks" => false} do %>
							<%= attachment_image_tag post, :post_image, format:"jpg", fallback:"/images/no_image.jpg", class:"post-img", alt:"ポストイメージ" %>
						<% end %>
					</div>
				<% end %>
			<% else %>
			    <div class="col-md-offset-1">
			    	<h4>いいねした投稿はありません</h4>
			    </div>
			<% end %>
		</div>
	</div>
</div>