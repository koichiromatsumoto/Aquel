<div class="container post">
    <div class="post-show-box">

    	<div class="row post-img">
			<div class="col-md-offset-2 col-md-8">
				<%= attachment_image_tag @post, :post_image, format:"jpg", class:"post-show-img" %>
			</div>
		</div>

		<div class="row post-menu">
			<div class="col-md-offset-6 col-md-6">
				<%= @post.user.name %>
				<%= @post.created_at %>
			</div>
		</div>

		<div class="row">
			<div class="col-md-offset-2 col-md-8 post-title">
				<%= @post.title %>
				<%= @post.user.name %>

				<%= @post.title %>
				<%= @post.created_at %>
			</div>

			<div class="col-md-offset-2 col-md-8 post-text">
				<%= @post.text %>
			</div>
        </div>

		<div class="row">
			<div class="col-md-offset-9 col-md-2">
				<%= link_to "編集する", edit_post_path(@post.id), class:"form btn-post" %>
			</div>
		</div>

	</div>
</div>