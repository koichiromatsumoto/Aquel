<div class="container post">
	<h2>投稿確認画面</h2>
    <div class="post-new-box">
    	<%= form_for @post, url: posts_path(@post.id) do |f| %>

    	<div class="row post-img">
			<div class="col-md-12">
				<%= f.label :post_image, "写真選択" %>
				<%= attachment_image_tag @post, :post_image %>
			</div>
		</div>

		<div class="row post-title">
			<div class="col-md-12">
				<%= f.label :title, "タイトル" %>
				<%= @post.title %>
			</div>
		</div>

		<div class="row select-category">
			<div class="col-md-12">
				<%= f.label :category_ids, "カテゴリ選択" %>
				<% @post.post_categories.each do |post_category| %>
				  <%= post_category.category.name %>
				<% end %>
			</div>
		</div>

		<div class="row post-text">
			<div class="col-md-12">
				<%= f.label :text, "説明文" %>
				<%= @post.text%>
			</div>
		</div>

		<div class="row">
			<div class="col-md-12">
				<%= f.submit "保存", class:"form" %>
			</div>
		</div>

		<% end %>
	</div>
</div>