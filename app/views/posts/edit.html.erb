<div class="container post">
	<h2>編集画面</h2>
    <div class="post-box">
    	<%= form_for(@post) do |f| %>

    	<div class="row post-img">
			<div class="col-md-12">
				<%= attachment_image_tag @post, :post_image, format:"jpg", class:"post-edit-img" %>
			</div>
		</div>

		<div class="row post-title">
			<div class="col-md-12">
				<%= f.label :title, "タイトル" %>
				<%= f.text_field :title, autocomplete: true, class:"form-control" %>
			</div>
		</div>

		<div class="row post-text">
			<div class="col-md-12">
				<%= f.label :text, "説明文" %>
				<%= f.text_area :text, autocomplete: true, class:"form-control" %>
			</div>
		</div>

		<div class="row">
			<div class="col-md-offset-1 col-md-2">
				<%= link_to "投稿削除", post_path(@post.id), method: :delete, data: {"turbolinks" => false}, class:"btn" %>
				<%= f.submit "保存", class:"form btn-post" %>
			</div>
		</div>

		<% end %>
	</div>
</div>