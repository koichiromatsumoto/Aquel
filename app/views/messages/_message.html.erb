<% unless message.user == current_user %>
	<div class="message">
		<%= link_to user_path(message.user.id), data: {"turbolinks" => false}, class:"room-users" do%>
			<%= attachment_image_tag message.user, :profile_image, :fill, 40, 40, format:"jpg", fallback:"no_image.jpg", size:"40x40", class:"img-circle" %>
			<%= message.user.name %><% end %> : <%= message.content %>
		<span class="pull-right"><%= message.created_at.strftime('%m/%d %H:%M') %></span>
	</div>
<% else %>
    <div class="current_user_message">
    	<%= link_to user_path(message.user.id), data: {"turbolinks" => false}, class:"room-users" do%>
			<%= attachment_image_tag message.user, :profile_image, :fill, 40, 40, format:"jpg", fallback:"no_image.jpg", size:"40x40", class:"img-circle" %>
			<%= message.user.name %><% end %> : <%= message.content %>
		<span class="pull-right"><%= message.created_at.strftime('%m/%d %H:%M') %></span>
	</div>
<% end %>